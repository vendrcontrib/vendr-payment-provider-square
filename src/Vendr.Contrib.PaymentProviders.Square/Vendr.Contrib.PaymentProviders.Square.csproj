<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>netstandard2.0</TargetFramework>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <Authors>Vendr Community</Authors>
        <Company>Vendr Community</Company>
        <Copyright>Vendr Community</Copyright>
        <description>Square payment provider for Vendr, the eCommerce package for Umbrao v8+</description>
        <PackageLicenseExpression>MIT</PackageLicenseExpression>
        <PackageProjectUrl>https://vendr.net</PackageProjectUrl>
        <PackageIcon>logo-128.png</PackageIcon>
        <PackageTags>umbraco, vendr, ecommerce, square</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Square" Version="18.0.0" />
        <PackageReference Include="Vendr.Core" Version="2.0.0" />
        <PackageReference Include="Microsoft.AspNet.WebApi.Client" Version="5.2.7" />
    </ItemGroup>

    <ItemGroup>
        <None Include="..\..\assets\logo-128.png">
            <Pack>True</Pack>
            <PackagePath></PackagePath>
        </None>
    </ItemGroup>

</Project>
